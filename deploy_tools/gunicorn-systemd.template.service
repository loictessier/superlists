[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=loict
WorkingDirectory=/home/loict/sites/SITENAME/source
ExecStart=/home/loict/sites/SITENAME/virtualenv/bin/gunicorn \
    --bind unix:/tmp/SITENAME.socket \
    superlists.wsgi:application

[Install]
WantedBy=multi-user.target